    <section class="registration">
      <div class="form">
        <h1>
          REGISTER NOW TO START
        </h1>
        <div class="form-input">
          <div class="email">
            <label>Email</label><br />
            <input type="email" name="email" />
          </div>
          <div class="username">
            <label>Username</label><br />
            <input type="text" name="username" />
          </div>
          <div class="password">
            <label>Password</label><br />
            <input type="password" name="password" />
          </div>
          <div class="checkbox-1 checkbox">
            <input type="checkbox" name="terms" required />
            <label>I agree to Gamer Guru's Terms of Conditions and Privacy
              Policy, and am 13 years of age or older.</label>
          </div>
          <div class="checkbox-2 checkbox">
            <input type="checkbox" name="notifications" required />
